<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Fragments.Fragment_Minhas">

    <!--Tipo-->

    <!--Destino-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/de" />

        <Spinner
            android:id="@+id/spinner_de"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_de"
            android:layout_alignParentRight="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/id_de"
            android:layout_toRightOf="@+id/id_de"
            android:entries="@array/cidades"
            android:gravity="center"
            android:hint="Origem"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/id_para"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="@string/para" />

        <Spinner
            android:id="@+id/spinner_para"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_para"
            android:layout_toEndOf="@+id/id_para"
            android:layout_toRightOf="@+id/id_para"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:entries="@array/cidades"
            android:textSize="20sp"
            android:hint="Destino"
            android:textAlignment="center"/>


        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data"
            android:textSize="15sp"
            android:layout_marginTop="120dp"
            /> <!--Text Data-->

        <TextView
            android:id="@+id/text_time"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_date"
            android:layout_marginStart="151dp"
            android:layout_marginLeft="151dp"
            android:layout_toEndOf="@+id/text_date"
            android:layout_toRightOf="@+id/text_date"
            android:text="@string/hora"
            android:textSize="15sp" /> <!--Text Hora-->

        <EditText
            android:id="@+id/edit_Data"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/dd_mm"
            android:inputType="date"/>

        <EditText
            android:id="@+id/edit_Hora"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edit_Data"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="220dp"
            android:hint="@string/xx_xx"
            android:inputType="time"
            android:focusable="false"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/edit_coment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:gravity="start|top"
        android:hint="ComentÃ¡rio"
        android:inputType="textMultiLine"
        android:maxLength="140" />

    <Button
        android:id="@+id/bot_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/cadastrar"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


</LinearLayout>