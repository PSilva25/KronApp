<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/buttonshape3"
    android:padding="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_de"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="De:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <AutoCompleteTextView
            android:id="@+id/spinner_de"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:entries="@array/cidades"
            android:hint="Origem"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/id_para"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="Para:"
            android:textSize="18sp"/>

        <AutoCompleteTextView
            android:id="@+id/spinner_para"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:entries="@array/cidades"
            android:textSize="20sp"
            android:hint="Destino"
            android:textAlignment="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" /> <!--Text Data-->

        <EditText
            android:id="@+id/edit_Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="false"
            android:textAlignment="center"
            android:hint="@string/dd_mm"
            android:inputType="date" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/bot_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:background="@drawable/buttonshape2"
            android:textColor="#FFFFFF"/>


        <Button
            android:id="@+id/bot_filtro"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Filtrar"
            android:background="@drawable/buttonshape"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>




</LinearLayout>