<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_item_list"
    android:padding="10dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/insert_tell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insira_seu_n_mero_telefone"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_mensagem_tell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/para_oferecer_uma_carona"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/edit_tell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:textSize="20sp"
        android:inputType="phone"
        android:hint="@string/_99_999999999"
        android:textAlignment="center" />

    <Button
        android:id="@+id/bot_addtell"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="end"
        android:background="@drawable/button_gradient_blue"
        android:text="@string/feito"
        android:textColor="#FFFFFF" />

</LinearLayout>