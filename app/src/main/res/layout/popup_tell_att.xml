<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_item_list"
    android:padding="10dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/atualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar telefone"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_mensagem_tell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Insira abaixo o nÃºmero atualizado:"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/edit_tell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:textSize="20sp"
        android:inputType="phone"
        android:hint="(99) 999999999"
        android:textAlignment="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/bot_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:background="@drawable/button_gradient_red"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/bot_addtell"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_gradient_blue"
            android:text="Feito"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</LinearLayout>